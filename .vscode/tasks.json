{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "-Wall",
                "-g",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.exe",
				"*.cpp",
                "*.hpp",
                "-D DEBUG"
            ],
            // "command": "make clean && make",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}